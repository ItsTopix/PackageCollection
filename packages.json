{
    "office": {
        "linux": {
            "arch": [
                "sudo pacman -Syu",
                "sudo pacman -S texlive texlive-langgerman texstudio",
                "sudo pacman -S --needed base-devel git",
                "git clone https://aur.archlinux.org/onlyoffice-bin.git",
                "cd onlyoffice-bin",
                "cat PKGBUILD && read",
                "makepkg -si",
                "cd .."
            ]
        }
    },
    "media": {
        "linux": {
            "arch": [
                "sudo pacman -Syu",
                "sudo pacman -S gimp shotcut"
            ]
        }
    },
    "development": {
        "linux": {
            "arch": [
                "sudo pacman -Syu",
                "sudo pacman -S filezilla intellij-idea-community-edition",
                "sudo pacman -S --needed base-devel git",
                "git clone https://aur.archlinux.org/beekeeper-studio-bin.git",
                "cd beekeeper-studio-bin",
                "cat PKGBUILD && read",
                "makepkg -si",
                "cd ..",
                "git clone https://aur.archlinux.org/visual-studio-code-bin.git",
                "cd visual-studio-code-bin",
                "cat PKGBUILD && read",
                "makepkg -si",
                "cd .."
            ]
        }
    }
}